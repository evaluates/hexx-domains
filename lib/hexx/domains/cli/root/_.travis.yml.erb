---
language:     ruby
bundler_args: --without metrics
cache:        bundler
script:       rake test:coverage:run
rvm:
<% rubies.each do |item| -%>
  - <%= item %>
<% end -%>
matrix:
  allow_failures:
<% rubies.select { |item| item.include? "-head" }.each do |item| -%>
    - rvm: <%= item %>
<% end -%>
